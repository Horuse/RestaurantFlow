<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:RestaurantFlow.Server.ViewModels.Inventory"
             xmlns:shadui="clr-namespace:ShadUI;assembly=ShadUI"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="500"
             x:Class="RestaurantFlow.Server.Views.Inventory.AddIngredientDialog"
             x:DataType="vm:AddIngredientViewModel">

    <StackPanel Spacing="24" Margin="24">
        <StackPanel Spacing="8">
            <TextBlock Text="{Binding Title}" Classes="h3" FontWeight="Bold" />
            <TextBlock Text="Заповніть дані інгредієнта" Classes="Small Muted" />
        </StackPanel>
        
        <StackPanel Spacing="16">
            <TextBox
                Classes="Clearable"
                UseFloatingWatermark="True"
                Text="{Binding Name, Mode=TwoWay}"
                Watermark="Введіть назву інгредієнта"
                Width="300" />
            
            <TextBox
                Classes="Clearable"
                UseFloatingWatermark="True"
                Text="{Binding Unit, Mode=TwoWay}"
                Watermark="кг, л, шт"
                Width="300" />
            
            <NumericUpDown
                shadui:ControlAssist.Label="Поточний запас"
                Value="{Binding CurrentStock, Mode=TwoWay}"
                Minimum="0"
                Maximum="10000"
                Increment="0.1"
                FormatString="F2"
                Width="300" />
            
            <NumericUpDown
                shadui:ControlAssist.Label="Мінімальний запас"
                Value="{Binding MinimumStock, Mode=TwoWay}"
                Minimum="0"
                Maximum="1000"
                Increment="0.1"
                FormatString="F2"
                Width="300" />
        </StackPanel>
        
        <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right" Margin="0,16,0,0">
            <Button Classes="Outline" Command="{Binding CancelCommand}">Скасувати</Button>
            <Button Classes="Primary" Command="{Binding SubmitCommand}" Content="{Binding SubmitText}" />
        </StackPanel>
    </StackPanel>
</UserControl>