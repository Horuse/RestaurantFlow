             xmlns:vm="using:RestaurantFlow.Client.ViewModels"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="RestaurantFlow.Client.Views.CartView"
             x:DataType="vm:CartViewModel">

    <Design.DataContext>
        <vm:CartViewModel/>
    </Design.DataContext>

    <Grid>
        <!-- Cart Content -->
        <Grid Margin="20,20,20,120">
