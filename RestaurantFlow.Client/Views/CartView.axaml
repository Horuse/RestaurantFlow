                            <TextBlock Grid.Row="0" Grid.Column="1" 
                                       Text="{Binding CartService.TotalItems}" 
                                       FontSize="16" FontWeight="Bold"/>

                            <!-- Separator -->
                            <Rectangle Grid.Row="1" Grid.ColumnSpan="2" 
                                       Height="1" Fill="#E0E0E0" 
                                       Margin="0,15"/>

                            <!-- Total -->
                            <TextBlock Grid.Row="2" Grid.Column="0" 
                                       Text="Ð—Ð°Ð³Ð°Ð»ÑŒÐ½Ð° ÑÑƒÐ¼Ð°:" 
                                       FontSize="20" FontWeight="Bold"/>
                            <TextBlock Grid.Row="2" Grid.Column="1" 
                                       Text="{Binding CartService.TotalPrice, StringFormat='â‚´{0:F2}'}" 
                                       FontSize="20" FontWeight="Bold"
                                       Foreground="#DA291C"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <!-- Action Buttons (Fixed at bottom) -->
        <StackPanel VerticalAlignment="Bottom" 
                    HorizontalAlignment="Center"
                    Orientation="Horizontal"
                    Spacing="20"
                    Margin="0,0,0,30"
                    ZIndex="20">
            
            <!-- Clear Cart -->
            <Button Content="ÐžÑ‡Ð¸ÑÑ‚Ð¸Ñ‚Ð¸ ÐºÐ¾ÑˆÐ¸Ðº"
                    Background="Transparent"
                    BorderBrush="#DA291C"
                    BorderThickness="2"
                    Foreground="#DA291C"
                    CornerRadius="25"
                    Padding="30,12"
                    FontSize="16"
                    FontWeight="Bold"
                    Command="{Binding ClearCartCommand}"
                    IsVisible="{Binding !IsCartEmpty}">
                <Button.Styles>
                    <Style Selector="Button:pointerover">
                        <Setter Property="Background" Value="#DA291C"/>
                        <Setter Property="Foreground" Value="White"/>
                    </Style>
                </Button.Styles>
            </Button>

            <!-- Place Order -->
            <Button Background="#DA291C"
                    Foreground="White"
                    BorderThickness="0"
                    CornerRadius="30"
                    Padding="40,15"
                    FontSize="18"
                    FontWeight="Bold"
                    Command="{Binding PlaceOrderCommand}"
                    IsVisible="{Binding !IsCartEmpty}">
                <Button.Styles>
                    <Style Selector="Button:pointerover">
                        <Setter Property="Background" Value="#B8251C"/>
                    </Style>
                </Button.Styles>
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <TextBlock Text="ðŸ“‹"/>
