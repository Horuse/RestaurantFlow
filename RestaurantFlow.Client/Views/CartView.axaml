                           FontSize="16" 
                           HorizontalAlignment="Center"
                           Foreground="#999"/>
            </StackPanel>

            <!-- Cart Items -->
            <ScrollViewer IsVisible="{Binding !IsCartEmpty}">
                <StackPanel Spacing="20" Margin="50,20">
                    <!-- Cart Items List -->
                    <ItemsControl ItemsSource="{Binding CartService.Items}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="White" 
                                        CornerRadius="15" 
                                        Padding="20"
                                        Margin="0,0,0,10">
                                    <Border.Effect>
                                        <DropShadowEffect BlurRadius="8" OffsetY="4" Opacity="0.1"/>
                                    </Border.Effect>
                                    
                                    <Grid ColumnDefinitions="Auto,*,Auto,Auto">
                                        <!-- Item Info -->
                                        <StackPanel Grid.Column="0" VerticalAlignment="Center" Width="300">
                                            <TextBlock Text="{Binding MenuItem.Name}" 
                                                       FontSize="18" FontWeight="Bold" 
                                                       TextWrapping="Wrap"/>
                                            <TextBlock Text="{Binding MenuItem.Description}" 
                                                       FontSize="12" Foreground="#666" 
                                                       TextWrapping="Wrap" MaxLines="2"
                                                       Margin="0,5,0,0"/>
                                            <TextBlock Text="{Binding SpecialInstructions}" 
                                                       FontSize="12" Foreground="#DA291C" 
                                                       TextWrapping="Wrap"
                                                       IsVisible="{Binding SpecialInstructions, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                                       Margin="0,5,0,0"/>
                                        </StackPanel>

                                        <!-- Price -->
                                        <TextBlock Grid.Column="1" 
                                                   Text="{Binding MenuItem.Price, StringFormat='â‚´{0:F2}'}" 
                                                   FontSize="16" FontWeight="Bold"
                                                   Foreground="#DA291C"
                                                   VerticalAlignment="Center"
                                                   HorizontalAlignment="Center"/>

                                        <!-- Quantity Controls -->
                                        <StackPanel Grid.Column="2" Orientation="Horizontal" 
                                                    VerticalAlignment="Center" Spacing="10">
                                            <Button Content="âˆ’" 
                                                    Background="#FFC72C" 
                                                    Foreground="#DA291C"
                                                    FontWeight="Bold"
                                                    FontSize="18"
                                                    Width="35" Height="35"
                                                    CornerRadius="17"
                                                    BorderThickness="0"
                                                    Command="{Binding $parent[UserControl].((vm:CartViewModel)DataContext).DecreaseQuantityCommand}"
                                                    CommandParameter="{Binding}"/>
                                            
                                            <Border Background="#F5F5F5" 
                                                    CornerRadius="8" 
                                                    Padding="15,8" 
                                                    MinWidth="50">
                                                <TextBlock Text="{Binding Quantity}" 
                                                           FontWeight="Bold" 
                                                           HorizontalAlignment="Center"/>
                                            </Border>
                                            
                                            <Button Content="+" 
                                                    Background="#FFC72C" 
                                                    Foreground="#DA291C"
                                                    FontWeight="Bold"
                                                    FontSize="16"
                                                    Width="35" Height="35"
                                                    CornerRadius="17"
                                                    BorderThickness="0"
                                                    Command="{Binding $parent[UserControl].((vm:CartViewModel)DataContext).IncreaseQuantityCommand}"
                                                    CommandParameter="{Binding}"/>
                                        </StackPanel>

                                        <!-- Total Price & Remove -->
                                        <StackPanel Grid.Column="3" VerticalAlignment="Center" Spacing="8" HorizontalAlignment="Right">
                                            <TextBlock Text="{Binding TotalPrice, StringFormat='â‚´{0:F2}'}" 
                                                       FontSize="18" FontWeight="Bold"
                                                       Foreground="#DA291C"
                                                       HorizontalAlignment="Right"/>
                                            
                                            <Button Content="ðŸ—‘ï¸" 
                                                    Background="Transparent" 
                                                    Foreground="#DA291C"
                                                    FontSize="16"
                                                    BorderThickness="0"
                                                    Command="{Binding $parent[UserControl].((vm:CartViewModel)DataContext).RemoveItemCommand}"
                                                    CommandParameter="{Binding}"
                                                    ToolTip.Tip="Ð’Ð¸Ð´Ð°Ð»Ð¸Ñ‚Ð¸ Ð· ÐºÐ¾ÑˆÐ¸ÐºÐ°"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <!-- Order Summary -->
                    <Border Background="#F8F9FA" 
                            CornerRadius="15" 
                            Padding="30"
                            Margin="0,20,0,0">
                        <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                            <!-- Items Count -->
                            <TextBlock Grid.Row="0" Grid.Column="0" 
                                       Text="ÐšÑ–Ð»ÑŒÐºÑ–ÑÑ‚ÑŒ ÑÑ‚Ñ€Ð°Ð²:" 
